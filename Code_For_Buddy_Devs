        ScrollReveal().reveal('.home-content p', { delay: 100, origin: 'left', interval: 200 }); ScrollReveal().reveal('.social-icons', { delay: 200, origin: 'bottom' });
        ScrollReveal().reveal('.home-btns', { delay: 200, origin: 'left', interval: 200 });

        // ABOUT - SECTION
